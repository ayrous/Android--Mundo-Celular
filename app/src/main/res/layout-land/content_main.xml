<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/background_light"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context=".MainActivity"
    tools:showIn="@layout/app_bar_main">

    <TextView
        android:id="@+id/titulo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:text="Bem vindo ao Mundo Celular!"
        android:textAlignment="center"
        android:textColor="#206907"
        android:textSize="36sp"
        app:fontFamily="casual" />

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="wrap_content"
        android:layout_height="132dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/titulo"
        android:background="@android:color/background_light"
        app:srcCompat="@drawable/cel" />

    <TextView
        android:id="@+id/textView4"
        android:layout_width="400dp"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/titulo"
        android:layout_alignStart="@+id/titulo"
        android:layout_below="@+id/imageView2"
        android:layout_marginLeft="29dp"
        android:layout_marginStart="29dp"
        android:text="Clique no botÃ£o para explorar esse Mundo!"
        android:textAlignment="center"
        android:textColor="@color/colorPrimary"
        android:textSize="24sp"
        app:fontFamily="casual" />

    <Button
        android:id="@+id/btnEntrar"
        android:layout_width="187dp"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/textView4"
        android:layout_alignRight="@+id/textView4"
        android:layout_below="@+id/textView4"
        android:layout_marginEnd="100dp"
        android:layout_marginRight="81dp"
        android:layout_marginBottom="6dp"
        android:background="@color/colorAccent"
        android:fontFamily="casual"
        android:text="Entrar"
        android:textColor="@android:color/background_light" />
</RelativeLayout>